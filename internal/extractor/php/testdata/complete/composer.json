{
  "name": "vendor/example-package",
  "description": "A comprehensive example PHP package",
  "version": "2.1.0",
  "type": "library",
  "license": "MIT",
  "keywords": ["example", "testing", "library", "php"],
  "homepage": "https://example.com",
  "authors": [
    {
      "name": "John Doe",
      "email": "john@example.com",
      "homepage": "https://johndoe.com",
      "role": "Developer"
    },
    {
      "name": "Jane Smith",
      "email": "jane@example.com",
      "role": "Maintainer"
    }
  ],
  "support": {
    "email": "support@example.com",
    "issues": "https://github.com/vendor/example-package/issues",
    "source": "https://github.com/vendor/example-package",
    "docs": "https://docs.example.com"
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "ext-mbstring": "*",
    "symfony/console": "^6.0",
    "guzzlehttp/guzzle": "^7.5",
    "monolog/monolog": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Vendor\\Package\\": "src/",
      "Vendor\\Utils\\": "lib/utils/"
    },
    "classmap": ["classes/"],
    "files": ["helpers.php"]
  },
  "autoload-dev": {
    "psr-4": {
      "Vendor\\Package\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyze",
    "fix": "php-cs-fixer fix",
    "post-install-cmd": "echo 'Installation complete!'"
  },
  "bin": ["bin/console"],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
